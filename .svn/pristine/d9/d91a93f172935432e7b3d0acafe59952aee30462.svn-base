.tabs {
	width: inherit;
}

.tabs>ul {
	height: 36px;
	margin: 0;
	position: relative;
	border-bottom: 1px solid #EF942F;
}

.tabs>ul>li {
	font: bold 15px Calibri, sans-serif;
	display: block;
	float: left;
	padding: 5px 20px;
	color: #EF942F;
	text-align: center;
	z-index: 1;
	position: relative;
	cursor: pointer;
	border: 1px solid #EF942F;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	border-radius: 10px;
}

.tabs>ul>li.selected {
	color: #FFFFFF;
	cursor: text;
	border: none;
}

.tabs .moving_bg {
	padding: 5px 0;
	background-color: #EF942F;
	position: absolute;
	width: 1px;
	padding-bottom: 26px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	border-radius: 10px;
	/*background-image: url(arrow_down_green.gif);
	background-position: bottom left;
	background-repeat: no-repeat;*/
}

.tabs_content {
	padding: 10px 14px 20px 14px;
}

.tabs_slider {
	width: 5000px;
}

.tabs_slider>div {
	width: 945px;
	float: left;
	margin: 0;
	padding: 0;
	margin-right: 5px;
	/*visibility: hidden; Se hace por JS. Sino anda mal */
}

.tabs_slider>div>div {
	width: 100%;
	min-height: 1px;
}
