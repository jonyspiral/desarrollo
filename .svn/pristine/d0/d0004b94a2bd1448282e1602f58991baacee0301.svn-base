/* General */

body {
	background: #ffffff;
	font-size: 12px;
	font-family: 'Open Sans',"Helvetica Neue",Helvetica,Arial,sans-serif;
	color: #697072;
	overflow-y: scroll;
}
.page-header-fixed {
	padding-top: 65px;
}
.content {
	padding: 10px 25px 20px 25px;
}
.animated {
	-webkit-animation-duration: .2s;
	animation-duration: .2s;
	-webkit-animation-fill-mode: both;
	animation-fill-mode: both;
}
#dummy-link {
	position: absolute;
	top: 0;
	left: 0;
}
.vcenter {
	display: inline-block;
	vertical-align: middle;
	float: none;
}
.white {
	color: #fff !important;
}
.fa-2-5x {
	font-size: 2.5em;
}
.fa-4-5x {
	font-size: 4.5em;
}

.btn {
	min-width: 1px;
	padding: 0 5px;
	color: black;
	background-color: #cccccc;
	font-size: 14px;
	font-weight: bold;
}
.btn:hover, .btn:active, .btn:focus {
	background: #636363 repeat-x 0 -15px;
	color: #fff;
	text-decoration: none;
}
.btn.disabled, .btn[disabled] {
	opacity: 0.4;
}
.btn-danger {
	color: #fff;
	background-color: #d9534f;
	border-color: #d43f3a;
}
.btn-danger:hover, .btn-danger:focus {
	color: #fff;
	background-color: #c9302c;
	border-color: #ac2925;
}
.btn-success {
	color: #fff;
	background-color: #5cb85c;
	border-color: #4cae4c;
}
.btn-success:hover, .btn-success:focus {
	color: #fff;
	background-color: #449d44;
	border-color: #398439;
}


/* Favoritos */
.star-off:before {
	content: "\f006"
}

.star-on:before {
	content: "\f005";
	color: #efce4a;
}
@media (min-width: 992px) {
	.star-on:hover:before {
		content: "\f006"
	}

	.star-off:hover:before {
		content: "\f005";
		color: #efce4a;
	}
}


/* User menu */

.user-menu {
	position: fixed;
	top: 0;
	right: 0;
	color: #fff;
	z-index: 95;
}
.user-menu>li {
	background-color: rgba(0, 0, 0, 0.6);
}
.user-menu>li.navbar-company {
	padding: 3px 10px;
}
.mobile-user-menu, .mobile-user-menu a:hover, .mobile-user-menu a:focus {
	color: #fff;
}
.mobile-user-menu ul {
	background-color: rgba(0, 0, 0, 0.6);
}
.mobile-company-name {
	position: absolute;
	background-color: rgba(0, 0, 0, 0.6);
	padding: 3px 10px;
}

/* Header */

.navbar.navbar-default {
	background: rgba(0, 0, 0, 0.05);
}
.navbar-toggle {
	margin-top: 10px;
	margin-bottom: 10px;
	padding: 10px;
	border: none;
	float: left;
}
.navbar-toggle .icon-bar {
	background: #333;
}
.navbar-default .navbar-nav>li>a {
	color: #585663;
}
.nav>li>a {
	color: #fff;
}
.navbar-nav>li>a {
	padding: 8px 10px;
}
.navbar-nav>.open>a, .navbar-nav>.open>a:focus, .navbar-nav>.open>a:hover {
	/*background: 0 0!important;*/
	color: #fff;
	opacity: 0.3;
	filter: alpha(opacity=100);
}
.nav>li>a:hover, .nav>li>a:focus, .nav .open>a, .nav .open>a:hover, .nav .open>a:focus {
	background-color: rgba(0, 0, 0, 0.3);
}
.navbar-brand {
	padding: 4px 20px;
}
.navbar-brand img {
	width: auto;
	height: 100%;
}
.navbar-user {
	max-width: 150px;
}
.navbar-user .user-title {
	margin-top: 5px;
}
.navbar-user img, .navbar-favorites img {
	width: 30px;
	height: 30px;
	margin-right: 5px;
	-webkit-border-radius: 30px;
	-moz-border-radius: 30px;
	border-radius: 30px;
}
.dropdown-menu {
	border: none;
	-webkit-box-shadow: 0 2px 5px -1px rgba(0,0,0,.2);
	box-shadow: 0 2px 5px -1px rgba(0,0,0,.2);
	font-size: 15px;
	text-transform: uppercase;
	z-index: 2000;
}
.dropdown-menu>li>a {
	color: #fff;
}
.dropdown-menu .divider {
	background-color: #fff;
}
.navbar-nav>li>.dropdown-menu {
	border-top: 1px solid #fff;
}

@media (min-width: 768px) {
	.navbar-toggle {
		display: block;
	}
}

@media (max-width: 767px) {
	.page-header-fixed {
		padding-top: 5px;
	}
	.content {
		padding-bottom: 80px;
	}
	.navbar-header {
		border-bottom: 1px solid #eee;
		float: left;
	}
	.navbar-brand {
		width: auto;
	}
	.navbar-left, .navbar-nav>li {
		float: left;
	}
	.navbar-nav.navbar-right .open .dropdown-menu {
		right: 0;
		left: auto;
	}
	.navbar-nav .open .dropdown-menu>li>a {
		padding: 5px 15px;
	}
}


/* Items del catálogo */

.item {
	min-height: 150px;
	padding-left: 10px;
	padding-right: 10px;

	/* Aspect ratio */
	padding-bottom: 33.3333333%;
}
.item-inner {
	border: 1px solid #d6d6d6;

	/* Aspect ratio */
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: 0 5px 10px 5px;
	padding: 0 5px;
}
.item-inner>a {
	display: block;
	height: 100%;
	-webkit-transition: 0.3s;
	-moz-transition: 0.3s;
	-ms-transition: 0.3s;
	-o-transition: 0.3s;
	transition: 0.3s;
}
.item-inner>a:hover {
	opacity: 0.7;
}
.item-inner img {
	width: 100%;
	height: auto;
}
.item-star {
	position: absolute;
	top: 10px;
	right: 10px;
	width: 30px;
	height: 30px;
}
.item-star img {
	width: 100%;
	height: auto;
}
.item-name {
	text-align: center;
	position: absolute;
	font-size: 0.9em;
	bottom: 3px;
	left: 15px;
	right: 15px;
	line-height: 11px;
}
.item-tipo {
	position: absolute;
	top: 10px;
	left: 10px;
	text-transform: uppercase;
	text-align: left;
}
.item-tipo .badge {
	background-color: #cacaca;
	margin-bottom: 2px;
}
.item-tipo .badge.badge-danger {
	background-color: #d9534f;
}
.item-tipo .badge.inverted {
	border: 1px solid #afafaf;
	color: #afafaf;
	background: none;
}
.item-precios {
	position: absolute;
	left: 10px;
	top: 30px;
}
.item-stock {
	position: absolute;
	left: 10px;
	top: 46px;
}

@media (max-width: 767px) {
	.item {
		padding-bottom: 50%;
	}
}


